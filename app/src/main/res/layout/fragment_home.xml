<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- ðŸ”† Peringatan Sensor Cahaya -->
        <TextView
            android:id="@+id/txt_light_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF3CD"
            android:textColor="#856404"
            android:padding="12dp"
            android:visibility="gone"
            android:text="ðŸ“š Pencahayaan rendah. Disarankan membaca di tempat terang."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- ðŸ“š Selamat Datang -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang di Perpustakaan Online Harry Potter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gunakan menu di bawah untuk menjelajah buku, konten, dan favorit Anda."
            android:textSize="16sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ“š Gambar Hiasan -->
        <ImageView
            android:id="@+id/img_books"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_buku"
            android:layout_marginTop="12dp"
            android:contentDescription="Ilustrasi Buku" />

    </LinearLayout>
</ScrollView>
